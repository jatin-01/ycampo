<%-include("./partials/header") %>
<div class="container set ">
    <h1 class="display-4 font" style="padding-bottom:60px">EDIT CAMPGROUND -<%=campground.title%></h1>
    <form action="/ycampo/<%=campground._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="exampleTitle">Title</label>
            <input type="text" class=" form-control form-control-sm" id="exampleTitle" aria-describedby="emailHelp"
                name="title" value="<%= campground.title%>">
        </div>
        <div class="form-group">
            <label for="exampleImg1">Img 1</label>
            <input type="text" class="form-control form-control-sm " placeholder="img1" id="exampleImg1" name="img1" value="<%= campground.img1%>">
        </div>
        <div class="form-group">
            <label for="exampleImg2">Img 2</label>
            <input type="text" class="form-control form-control-sm " placeholder="img2" id="exampleImg2" name="img2" value="<%= campground.img2%>">
        </div>
        <div class="form-group">
            <label for="exampleImg3">Img 3</label>
            <input type="text" class="form-control form-control-sm " placeholder="img3" id="exampleImg3" name="img3" value="<%= campground.img3%>">
            <small id="emailHelp" class="form-text text-muted">It should be img url only.</small>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCity">City</label>
                <input type="text" class="form-control" id="inputCity" name="city" value="<%= campground.city%>">
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">State</label>
                <input type="text" class="form-control" id="inputState" name="state" value="<%= campground.state%>">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputKnown">Known For</label>
                <input type="text" class="form-control" id="inputKnown" name="known" value="<%= campground.known%>">
            </div>
            <div class="form-group col-md-4">
                <label for="inputActivity">Activities</label>
                <input type="text" class="form-control" id="inputActivity" name="activity" value="<%= campground.activity[0]%>">
                <input type="text" class="form-control" id="inputActivity" name="activity" value="<%= campground.activity[1]%>">
                <input type="text" class="form-control" id="inputActivity" name="activity" value="<%= campground.activity[2]%>">
                <input type="text" class="form-control" id="inputActivity" name="activity" value="<%= campground.activity[3]%>">
            </div>
        </div>
        <div class="form-group col-md-4">
            <label for="inputActivity">Other Activities</label>
            <input type="text" class="form-control" name="otherActivities" value="<%= campground.otherActivities%>">
        </div>
        <div class="form-group">
            <label for="exampleTextarea">Description</label>
            <textarea class="form-control" id="exampleTextarea" rows="6" name="desc" ><%= campground.desc%></textarea>
        </div>
        <div class="form-group">
            <label for="price">Price :</label>
            <input type="number" placeholder="Rs." min="1500" step="100" max="4000" name="price"  value="<%=campground.price%>" required>
        </div>
        <button type="submit" class="btn btn-outline-dark btn-lg ">Submit</button>
    </form>

</div>
<%-include("./partials/footer") %>