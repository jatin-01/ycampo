<%-include("./partials/header") %>

    <div class="container set">
        <% if(noMatch && noMatch!=="undefined" && present){%>
        <div class="container">
            <div class="error_mess p-5 rounded " >
                <p class="text-center" style="font-size: 4rem;"><i class="fas fa-exclamation-triangle "></i></p>
                <p class="text-center" style="font-size: 1.5rem;"><%=noMatch%></p>
            </div>
            <a href="/" class="btn btn-lg btn-outline-danger mt-3" style="font-weight: 600;"><i
                    class="fas fa-arrow-circle-left"></i>Go Back</a>
        </div>
    </div>
       <%}else if(!noMatch && noMatch!="undefined" && present){%>
        <div class="row ">
            <% camp.forEach(function(item){ %>
            <div class="col-lg-3 col-md-6">
                <div>
                    <div class="card shadow p-3 mb-5 bg-white rounded" style="width: 16rem;">
                        <img class="card-img-top card-imgSet" src="<%=item.img1%>" alt="Card image cap">
                        <div class="card-body px-1">
                            <div class="container-fluid m-0 p-0">
                                <div class="row">
                                    <div class="col-sm-7">
                                        <p class="card-title font-weight-bold"><%=item.title%></p>
                                    </div>
                                    <div class="col-sm-5">
                                        <span><i class="fas fa-rupee-sign"></i><%=item.price%></span>
                                    </div>
                                </div>
                            </div>
        
                            <p class="card-text"><%=item.desc.substring(0,50)%>....</p>
                            <a href="/ycampo/<%=item._id%>" class="btn orange btn-sm float-right">READ MORE</a>
                            <% if (item.rating === 0) { %>
                            <em>No reviews yet.</em>
                            <% } else { %>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star <% if (item.rating > 1.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (item.rating > 2.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (item.rating > 3.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (item.rating > 4.5) { %> checked <% } %>"></span>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
        <a href="/ycampo" class="btn btn-lg btn-outline-danger px-2"><i class="fas fa-arrow-circle-left"></i> Go back</a>
        <%} else if(!present){%>
