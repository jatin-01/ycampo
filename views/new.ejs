            <label for="exampleTextarea">Description</label>
            <textarea class="form-control" id="exampleTextarea" rows="6" name="desc"></textarea>
        </div>
        <div class="form-group">
        <label for="price">Price :</label>
        <input type="number" placeholder="Rs." min="1500" step="100" max="4000" name="price"  required>
        </div>
        <button type="submit" class="btn btn-outline-dark btn-lg ">Submit</button>
    </form>

</div>
