                    </script>
                <%}else if(ThisState=="KARNATAKA"){%>
                    <script>
                        L.mapbox.accessToken = 'pk.eyJ1IjoiamF0aW5rdW1hcjAxMTAiLCJhIjoiY2s4ZTh1MmF6MDdpbzNsbzA4bDEyeXVoZyJ9.HYvlf_nayigLpKK3u6zfFw';
                        var map = L.mapbox.map('map')
                            .setView([12.972442, 77.580643], 9)
                            .addLayer(L.mapbox.styleLayer('mapbox://styles/mapbox/streets-v11'));
                    </script>
                <%}else if(ThisState=="TAMIL NADU"){%>
                    <script>
                        L.mapbox.accessToken = 'pk.eyJ1IjoiamF0aW5rdW1hcjAxMTAiLCJhIjoiY2s4ZTh1MmF6MDdpbzNsbzA4bDEyeXVoZyJ9.HYvlf_nayigLpKK3u6zfFw';
                        var map = L.mapbox.map('map')
                            .setView([11.127123, 78.656891], 9)
                            .addLayer(L.mapbox.styleLayer('mapbox://styles/mapbox/streets-v11'));
                    </script>
                <%}else if(ThisState=="GOA"){%>
                    <script>
                        L.mapbox.accessToken = 'pk.eyJ1IjoiamF0aW5rdW1hcjAxMTAiLCJhIjoiY2s4ZTh1MmF6MDdpbzNsbzA4bDEyeXVoZyJ9.HYvlf_nayigLpKK3u6zfFw';
                        var map = L.mapbox.map('map')
                            .setView([15.2993, 74.1240], 9)
